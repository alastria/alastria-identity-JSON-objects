{
    "title": "Alastria Token Schema",
    "type": "object",
    "required": ["header", "payload"],
    "properties": {
        "header": {
            "type": "object",
            "required": ["typ", "alg", "kid"],
            "properties": {
                "typ": {
                    "type": "string"
                },
                "alg": {
                    "type": "string"
                },
                "kid": {
                    "type": "string"
                },
                "jwk": {
                    "type": "string",
                    "pattern": "^0[xX][0-9a-fA-F]+$"
                }
            },
            "additionalProperties": false
        },
        "payload": {
            "type": "object",
            "required": ["iss", "gwu", "cbu", "ani", "iat", "exp"],
            "additionalProperties": false,
            "properties": {
                "iss": {
                    "type": "string",
                    "pattern": "^did:ala:(quor|fabr|besu):.+:[0-9a-zA-Z]+$"
                },
                "gwu": {
                    "type": "string"
                },
                "cbu": {
                    "type": "string"
                },
                "ani": {
                    "type": "string",
                    "pattern": "^(redt|redb|redT|redB)$"
                },
                "iat": {
                    "type": "integer",
                    "minimum": 0
                },
                "exp": {
                    "type": "integer",
                    "minimum": 0
                },
                "nbf": {
                    "type": "integer",
                    "minimum": 0
                },
                "jti": {
                    "type": "string"
                }
            }
        }
    }
}
