{
    "title": "Alastria Credential Schema",
    "type": "object",
    "required": ["header", "payload", "signature"],
    "properties": {
        "header": {
            "type": "object",
            "required": ["typ", "alg", "kid"],
            "properties": {
                "typ": {
                    "type": "string"
                },
                "alg": {
                    "type": "string"
                },
                "kid": {
                    "type": "string",
                    "pattern": "^did:ala:(quor|fabr|besu):.+:[0-9a-zA-Z]+#[0-9a-zA-Z-]+$"
                },
                "jwk": {
                    "type": "string",
                    "pattern": "^0[xX][0-9a-fA-F]+$"
                }
            },
            "additionalProperties": false
        },
        "payload": {
            "type": "object",
            "required": ["iss", "iat", "vc"],
            "additionalProperties": false,
            "properties": {
                "iss": {
                    "type": "string",
                    "pattern": "^did:ala:(quor|fabr|besu):.+:[0-9a-zA-Z]+$"
                },
                "iat": {
                    "type": "integer",
                    "minimum": 0
                },
                "jti": {
                    "type": "string"
                },
                "sub": {
                    "type": "string",
                    "pattern": "^did:ala:(quor|fabr|besu):.+:[0-9a-zA-Z]+$"
                },
                "exp": {
                    "type": "integer",
                    "minimum": 0
                },
                "nbf": {
                    "type": "integer",
                    "minimum": 0
                },
                "vc": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": ["@context", "type"],
                    "properties": {
                        "@context": {
                            "type": "array",
                            "items": [{
                                "type": "string",
                                "enum": ["https://www.w3.org/2018/credentials/v1", "https://alastria.github.io/identity/credentials/v1"]
                            }, {
                                "type": "string",
                                "enum": ["https://www.w3.org/2018/credentials/v1", "https://alastria.github.io/identity/credentials/v1"]
                            }],
                            "additionalItems": true,
                            "uniqueItems": true,
                            "minItems": 2
                        },
                        "type": {
                            "type": "array",
                            "items": [{
                                "type": "string",
                                "enum": ["VerifiableCredential", "AlastriaVerifiableCredential"]
                            }, {
                                "type": "string",
                                "enum": ["VerifiableCredential", "AlastriaVerifiableCredential"]
                            }],
                            "additionalItems": true,
                            "uniqueItems": true,
                            "minItems": 2
                        },
                        "credentialSubject": {
                            "type": "object",
                            "required": ["levelOfAssurance"],
                            "properties": {
                                "levelOfAssurance": {
                                    "$comment": "0 -> Self, 1 -> Low, 2 -> Substantial, 3 -> High",
                                    "type": "integer",
                                    "minimum": 0,
                                    "maximum": 3
                                }
                            },
                            "minProperties": 2,
                            "maxProperties": 2,
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "signature": {
            "$comment": "TODO - how to validate it?"
        }
    }
}
