{
    "title": "Alastria Credential Schema",
    "type": "object",
    "required": ["header", "payload", "signature"],
    "properties": {
        "header": {
            "type": "object",
            "required": ["typ", "alg", "kid"],
            "properties": {
                "typ": {
                    "type": "string"
                },
                "alg": {
                    "type": "string"
                },
                "kid": {
                    "type": "string",
                    "$comment": "By now, we expect that after the DID, there will always be the text '#keys-1'",
                    "pattern": "^did:ala:(quor|fabr):.+:[0-9a-zA-Z]+#keys-1$"
                }
            },
            "additionalProperties": false
        },
        "payload": {
            "type": "object",
            "required": ["iss", "iat", "vc"],
            "additionalProperties": false,
            "properties": {
                "iss": {
                    "type": "string",
                    "pattern": "^did:ala:(quor|fabr):.+:[0-9a-zA-Z]+$"
                },
                "iat": {
                    "type": "integer",
                    "minimum": 0
                },
                "jti": {
                    "type": "string"
                },
                "sub": {
                    "type": "string",
                    "pattern": "^did:ala:(quor|fabr):.+:[0-9a-zA-Z]+$"
                },
                "exp": {
                    "type": "integer",
                    "minimum": 0
                },
                "nbf": {
                    "type": "integer",
                    "minimum": 0
                },
                "vc": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": ["@context", "type"],
                    "properties": {
                        "@context": {
                            "type": "array",
                            "items": [{
                                "$comment": "This value must be a URL but the schema is not validating it yet, we'll check it in the test itself",
                                "type": "string"
                            }, {
                                "type": "string",
                                "const": "JWT"
                            }],
                            "additionalItems": false,
                            "uniqueItems": true,
                            "minItems": 2,
                            "maxItems": 2
                        },
                        "type": {
                            "$comment": "We expect this property to be an array of only 2 items",
                            "type": "array",
                            "items": [{
                                "type": "string"
                            }, {
                                "type": "string"
                            }],
                            "additionalItems": false,
                            "uniqueItems": true,
                            "minItems": 2,
                            "maxItems": 2
                        },
                        "credentialSubject": {
                            "type": "object",
                            "required": ["levelOfAssurance"],
                            "properties": {
                                "levelOfAssurance": {
                                    "$comment": "0 -> Self, 1 -> Low, 2 -> Substantial, 3 -> High",
                                    "type": "integer",
                                    "minimum": 0,
                                    "maximum": 3
                                }
                            },
                            "minProperties": 2,
                            "maxProperties": 2,
                            "additionalProperties": true
                        }
                    }
                }
            }
        }, 
        "signature": {
            "$comment": "TODO - how to validate it?"
        }
    }
}