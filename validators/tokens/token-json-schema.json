{
    "title": "Alastria Token Schema",
    "type": "object",
    "required": ["header", "payload"],
    "properties": {
        "header": {
            "type": "object",
            "required": ["typ", "alg"],
            "properties": {
                "typ": {
                    "type": "string"
                },
                "alg": {
                    "type": "string"
                },
                "kid": {
                    "type": "string",
                    "pattern": "^did:ala:(quor|fabr|besu):.+:[0-9a-zA-Z]+#[0-9a-zA-Z-]+$"
                },
                "jwk": {
                    "type": "string",
                    "pattern": "^0[xX][0-9a-fA-F]+$"
                }
            },
            "additionalProperties": false
        },
        "payload": {
            "type": "object",
            "required": ["iss", "gwu", "cbu", "iat", "exp"],
            "additionalProperties": false,
            "properties": {
                "@context": {
                    "type": "array",
                    "items": [{
                        "type": "string",
                        "enum": ["https://alastria.github.io/identity/artifacts/v1"]
                    }],
                    "additionalItems": true,
                    "uniqueItems": true,
                    "minItems": 1
                },
                "iss": {
                    "type": "string",
                    "pattern": "^did:ala:(quor|fabr|besu):.+:[0-9a-zA-Z]+$"
                },
                "type": {
                    "type": "array",
                    "items": [{
                        "type": "string",
                        "enum": ["AlastriaToken"]
                    }],
                    "additionalItems": true,
                    "uniqueItems": true,
                    "minItems": 1
                },
                "gwu": {
                    "type": "string"
                },
                "cbu": {
                    "type": "string"
                },
                "mfau": {
                    "type": "string"
                },
                "iat": {
                    "type": "integer",
                    "minimum": 0
                },
                "exp": {
                    "type": "integer",
                    "minimum": 0
                },
                "nbf": {
                    "type": "integer",
                    "minimum": 0
                },
                "jti": {
                    "type": "string"
                }
            }
        }
    }
}
